                const result = await response.json();
                if (result.code !== 0) {
                    addSystemMessage(`ASR è°ƒç”¨å¤±è´¥: ${result.message || 'æœªçŸ¥é”™è¯¯'}`, true);
                    return;
                }

                const data = result.data || {};
                if (data.error) {
                    addSystemMessage(`è¯­éŸ³è¯†åˆ«å¤±è´¥: ${data.error}`, true);
                    return;
                }

                const text = data.text || '';
                if (!text) {
                    addSystemMessage('æœªè¯†åˆ«åˆ°æœ‰æ•ˆæ–‡æœ¬ï¼Œè¯·å†è¯•ä¸€æ¬¡ã€‚', true);
                    return;
                }

                const input = document.getElementById('questionInput');
                input.value = text;
                input.disabled = false;
                document.getElementById('sendBtn').disabled = false;
                input.focus();

                addSystemMessage('è¯­éŸ³è¯†åˆ«å®Œæˆï¼Œå·²å¡«å…¥è¾“å…¥æ¡†ã€‚');
            } catch (error) {
                console.error('ASR è¯·æ±‚å¤±è´¥:', error);
                addSystemMessage(`ASR è¯·æ±‚å¤±è´¥: ${error.message}`, true);
            }
        }

