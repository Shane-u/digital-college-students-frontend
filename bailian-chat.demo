        async function checkFlashCardProgress(flashCardId) {
            // å¦‚æœå·²ç»æ”¶åˆ°é€šçŸ¥ï¼Œä¸å†è½®è¯¢
            if (window.flashCardGenerated) {
                return;
            }
            
            let attempts = 0;
            const maxAttempts = 120; // å¢åŠ åˆ°120æ¬¡ï¼Œæ¯æ¬¡2ç§’ï¼Œæ€»å…±4åˆ†é’Ÿï¼Œé€‚åº”æ›´é•¿çš„AIç”Ÿæˆæ—¶é—´
            
            const checkInterval = setInterval(async () => {
                // å¦‚æœå·²ç»æ”¶åˆ°é€šçŸ¥ï¼Œåœæ­¢è½®è¯¢
                if (window.flashCardGenerated) {
                    clearInterval(checkInterval);
                    return;
                }
                
                attempts++;
                
                try {
                    const progressResponse = await fetch(`${FLASH_CARD_API_BASE}/progress?flashCardId=${flashCardId}`, {
                        method: 'GET',
                        headers: { 'Content-Type': 'application/json' },
                        credentials: 'include'
                    });
                    
                    const progressResult = await progressResponse.json();
                    
                    if (progressResult.code === 0 && progressResult.data) {
                        const progressData = progressResult.data;
                        
                        if (progressData.status === 'COMPLETED') {
                            window.flashCardGenerated = true;
                            clearInterval(checkInterval);
                            addSystemMessage(`âœ… é—ªå¡ç”Ÿæˆå®Œæˆï¼é—ªå¡ID: ${flashCardId}ã€‚æ‚¨å¯ä»¥ç‚¹å‡»"ç¡®è®¤ä¿å­˜"æŒ‰é’®ã€‚`);
                            addConfirmFlashCardButton(flashCardId);
                            if ('Notification' in window && Notification.permission === 'granted') {
                                new Notification('é—ªå¡ç”Ÿæˆå®Œæˆ', {
                                    body: `é—ªå¡å·²ç”Ÿæˆå®Œæˆï¼Œç‚¹å‡»ç¡®è®¤ä¿å­˜`, // è¿™é‡Œåº”è¯¥æ˜¾ç¤ºé—ªå¡æ ‡é¢˜ï¼Œä½†ç›®å‰æ— æ³•è·å–
                                    icon: '/favicon.ico'
                                });
                            }
                            return;
                        } else if (progressData.status === 'FAILED') {
                            window.flashCardGenerated = true;
                            clearInterval(checkInterval);
                            addSystemMessage(`âŒ é—ªå¡ç”Ÿæˆå¤±è´¥: ${progressData.message || 'æœªçŸ¥é”™è¯¯'}ã€‚`, true);
                            return;
                        } else {
                            // æ­£åœ¨ç”Ÿæˆä¸­ï¼Œæ›´æ–°è¿›åº¦ä¿¡æ¯
                            const progressMessage = `é—ªå¡ç”Ÿæˆä¸­... çŠ¶æ€: ${progressData.status || 'æœªçŸ¥'}, è¿›åº¦: ${progressData.progress || 0}%`;
                            // å¯ä»¥åœ¨è¿™é‡Œæ›´æ–°ä¸€ä¸ªä¸“é—¨çš„è¿›åº¦æ˜¾ç¤ºåŒºåŸŸï¼Œæˆ–è€…ä»…åœ¨æ§åˆ¶å°æ‰“å°
                            console.log(progressMessage);
                        }
                    } else if (progressResult.code === 10000 && progressResult.message === 'æŒ‡å®šé—ªå¡IDçš„è¿›åº¦ä¸å­˜åœ¨æˆ–å·²è¿‡æœŸ') {
                        // è¿›åº¦ä¿¡æ¯å·²è¿‡æœŸæˆ–ä¸å­˜åœ¨ï¼Œå¯èƒ½æ˜¯ç”¨æˆ·å·²ç»ç¡®è®¤æˆ–åˆ é™¤äº†
                        window.flashCardGenerated = true;
                        clearInterval(checkInterval);
                        addSystemMessage('é—ªå¡è¿›åº¦ä¿¡æ¯å·²è¿‡æœŸæˆ–ä¸å­˜åœ¨ã€‚');
                    } else {
                        console.error('è·å–é—ªå¡è¿›åº¦å¤±è´¥:', progressResult.message);
                    }
                } catch (error) {
                    console.error('æ£€æŸ¥é—ªå¡è¿›åº¦å¤±è´¥:', error);
                }
                
                if (attempts >= maxAttempts) {
                    clearInterval(checkInterval);
                    addSystemMessage('é—ªå¡ç”Ÿæˆè¶…æ—¶ï¼Œè¯·æ£€æŸ¥é—ªå¡åˆ—è¡¨æˆ–é‡è¯•ã€‚', true);
                }
            }, 2000); // æ”¹ä¸ºæ¯2ç§’æ£€æŸ¥ä¸€æ¬¡ï¼Œå‡å°‘æœåŠ¡å™¨å‹åŠ›
            
            window.flashCardCheckInterval = checkInterval;
        }

        function addConfirmFlashCardButton(flashCardId) {
