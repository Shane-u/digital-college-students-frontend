        // Fluxæ¨¡å¼å‘é€æ¶ˆæ¯
        async function sendMessageFlux(question) {
            try {
                const messageDiv = addAssistantMessage('');
                const contentDiv = messageDiv.querySelector('.message-content');
                let fullContent = ''; // ç”¨äºæ¸²æŸ“çš„ç´¯ç§¯å†…å®¹
                let rawContentForSave = ''; // ç”¨äºä¿å­˜çš„å®Œæ•´åŸå§‹å†…å®¹ï¼ˆåŒ…å«æ‰€æœ‰æ•°æ®å—ï¼‰

                const response = await fetch(`${API_BASE}/chat/stream/flux`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'text/event-stream'
                    },
                    body: JSON.stringify({
                        chat_id: currentChatId,
                        question: question,
                        stream: true,
                        userId: parseInt(currentUserId)
                    })
                });

                const reader = response.body.getReader();
                const decoder = new TextDecoder();
                let buffer = '';
                let isDone = false;
                let isFirstData = true; // æ–°å¢æ ‡å¿—ï¼Œç”¨äºè·³è¿‡ç¬¬ä¸€ä¸ª data äº‹ä»¶

                while (true) {
                    const { done, value } = await reader.read();
                    
                    if (done) {
                        isDone = true;
                        break;
                    }

                    buffer += decoder.decode(value, { stream: true });
                    const lines = buffer.split('\n');
                    buffer = lines.pop(); // ä¿ç•™æœ€åä¸€ä¸ªä¸å®Œæ•´çš„è¡Œ

                    for (const line of lines) {
                        if (line.startsWith('event:')) {
                            continue;
                        }

                        if (line.startsWith('data:')) {
                            const data = line.substring(5).trim();
                            
                            if (data === '[DONE]') {
                                isDone = true;
                                continue;
                            }

                            // å¦‚æœæ˜¯ç¬¬ä¸€ä¸ª data äº‹ä»¶ä¸” fullContent ä¸ºç©ºï¼Œåˆ™è·³è¿‡æ­¤æ¬¡å¤„ç†
                            if (isFirstData) {
                                isFirstData = false; // æ ‡è®°ç¬¬ä¸€ä¸ª data å·²å¤„ç†
                                continue;
                            }
                            isFirstData = false; // ç¡®ä¿åç»­æ•°æ®ä¸å†è§†ä¸ºç¬¬ä¸€ä¸ª

                            const decoded = data.replace(/&#32;/g, ' ').replace(/&#92n/g, '\n');
                            console.log("åŸå§‹ data:", data); // æ·»åŠ æ—¥å¿—
                            console.log("è§£ç åçš„ decoded:", decoded); // æ·»åŠ æ—¥å¿—
                            
                            // æ‰€æœ‰å†…å®¹éƒ½ç´¯ç§¯åˆ° rawContentForSaveï¼ˆç”¨äºæŒä¹…åŒ–ï¼‰
                            rawContentForSave += decoded;
                            
                            // åç«¯åœ¨æµå¼ç»“æŸå‰ï¼Œé€šå¸¸ä¼šå†å‘é€ä¸€ä¸ªå®Œæ•´çš„
                            // "<think>...æ€è€ƒ...</think> + æœ€ç»ˆå›ç­”" çš„å¤§å—å†…å®¹ï¼Œ
                            // è¿™å¯¹åº”å€’æ•°ç¬¬ä¸‰ä¸ª dataã€‚ä¸ºé¿å…åœ¨å‰ç«¯é‡å¤æ¸²æŸ“æ•´æ®µå›ç­”ï¼Œ
                            // è¿™é‡Œå¯¹è¿™ç§å®Œæ•´ <think> å—åšè¿‡æ»¤ï¼šåªç”¨å‰é¢çš„çœŸæ­£æµå¼ tokenã€‚
                            if (decoded && decoded.includes('<think>') && decoded.includes('</think>')) {
                                // è·³è¿‡è¿™ä¸ªèšåˆå—çš„æ¸²æŸ“ï¼Œä½†å·²ç´¯ç§¯åˆ° rawContentForSave
                                continue;
                            }

                            // ç©ºè¡Œï¼ˆå¦‚å€’æ•°ç¬¬äºŒä¸ª data: "\n"ï¼‰åœ¨ trim åä¼šå˜æˆç©ºå­—ç¬¦ä¸²ï¼Œè¿™é‡Œä¹Ÿä¸æ¸²æŸ“
                            // if (!decoded || decoded.trim() === '') {
                            //     continue;
                            // }

                            fullContent += decoded;
                            console.log("ä¼ é€’ç»™ renderContent çš„å®Œæ•´å†…å®¹ (fullContent):", fullContent); // æ·»åŠ æ—¥å¿—
                            contentDiv.innerHTML = renderContent(fullContent);
                            scrollToBottom();
                        }
                    }
                }

                if (!contentDiv.textContent.trim() && !contentDiv.innerHTML.trim()) {
                    contentDiv.textContent = '(æ— å“åº”)';
                }

                if (isDone && fullContent.trim()) {
                    addFlashCardButton(messageDiv, fullContent);
                    
                    // æµå¼ç»“æŸåï¼Œè°ƒç”¨åç«¯æ¥å£ä¿å­˜å®Œæ•´çš„åŸå§‹å†…å®¹
                    if (rawContentForSave.trim()) {
                        await saveFinalMessage(fullContent);
                    }
                }

                // æ›´æ–°ä¼šè¯åˆ—è¡¨ä¸­çš„æœ€åæ¶ˆæ¯æ—¶é—´
                const session = sessions.find(s => s.chatId === currentChatId);
                if (session) {
                    session.lastMessageTime = new Date().toISOString();
                    session.title = question.substring(0, 20) + (question.length > 20 ? '...' : '');
                    // é‡æ–°æ’åº
                    sessions.sort((a, b) => new Date(b.lastMessageTime) - new Date(a.lastMessageTime));
                    saveSessions();
                    renderSessionList(sessions);
                }

            } catch (error) {
                console.error('Flux å‘é€æ¶ˆæ¯å¤±è´¥:', error);
                addSystemMessage(`Flux å‘é€æ¶ˆæ¯å¤±è´¥: ${error.message}`, true);
            } finally {
                isStreaming = false;
                document.getElementById('questionInput').disabled = false;
                document.getElementById('sendBtn').disabled = false;
                document.getElementById('questionInput').focus();
            }
        }

