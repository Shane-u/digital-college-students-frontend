        async function sendAudioToAsr(audioBlob) {
            try {
                const formData = new FormData();
                formData.append('file', audioBlob, 'recording.webm');

                const response = await fetch(`${ASR_API_BASE}/transcribe`, {
                    method: 'POST',
                    body: formData
